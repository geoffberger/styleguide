    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "fabricator-assemble": "^1.2.0",
    "jquery": "^1.8.0",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.5",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^0.1.0",
    "karma-jquery": "^0.1.0",
    "karma-mocha": "^0.2.1",
