{
  "name": "revolve-clothing-style-guide",
  "version": "0.0.1",
  "description": "Style guide for revolve clothing",
  "main": "lib/styleguide.js",
  "scripts": {
    "start": "npm run clean && webpack-dev-server --config tools/webpack.styleguide-server.config.js",
    "test": "npm run karma:single",
    "build": "npm run clean && webpack -p --config tools/webpack.styleguide.config.js",
    "watch": "npm run clean && webpack -w --config tools/webpack.styleguide.config.js",
    "watch:test": "npm run karma",
    "karma": "karma start",
    "karma:single": "npm run karma -- --single-run=true --browsers=PhantomJS --no-colors",
    "clean": "rimraf site lib"
  },
  "repository": {
    "type": "git",
    "url": "git@ext-git.dressbad.com:firesqk"
  },
  "author": "Revolve Clothing",
  "license": "UNLICENSED",
